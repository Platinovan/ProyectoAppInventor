<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImagenJugador"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/default_image_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre del jugador -->
            <TextView
                android:id="@+id/NombreDelJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JuegosMultiples2000"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/verminvibesv"
                android:maxLines="1"/>

            <!-- Puntaje del jugador -->
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="Mejor Puntaje"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <!-- Valor del mejor puntaje -->
            <TextView
                android:id="@+id/PuntajeDeJugador"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="30dp"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

    //Para mostrar la posicion global del jugador
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/NumeroDeJugador"
            android:layout_width="105dp"
            android:layout_height="75dp"
            android:text="#9"
            android:layout_marginLeft="295dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="42.5dp"
            android:textSize="60dp"
            android:textAlignment="center" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>