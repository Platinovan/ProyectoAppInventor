<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="@drawable/estrellas_fondo">
    <!-- @drawable/estrellas_fondo -->

    <!-- Texto mi perfil -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/mi_perfil_recuadro_dos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="MI perfil"
        android:textColor="@color/white"
        android:textSize="33dp"
        android:textAlignment="center"
        android:fontFamily="@font/verminvibesv"
        android:paddingTop="7dp" />

    <!-- Imagen de perfil de jugador -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/default_profile"
        android:layout_marginTop="90dp"
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_centerHorizontal="true"/>

    <!-- Recuadro datos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:background="@drawable/recuadro_datos_dos"
        android:layout_marginTop="270dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="2dp"
        android:paddingVertical="17dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos del jugador"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/verminvibesv"/>

        <!-- Text field para correo electronico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"/>

        <TextView
            android:id="@+id/perfilCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="correo@dominio.com"
            android:textSize="18dp"
            android:textColor="@color/lightgray"
            android:textAlignment="center"/>

        <!-- Text field para el nombre de usiario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apodo"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"/>

        <TextView
            android:id="@+id/perfilApodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-------"
            android:textSize="18dp"
            android:textColor="@color/lightgray"
            android:textAlignment="center"/>

        <!-- Text field para la fecha en que se unio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se unio"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"/>

        <TextView
            android:id="@+id/perfilFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---------"
            android:textSize="18dp"
            android:textColor="@color/lightgray"
            android:textAlignment="center"/>

        <!-- Boton para editar password -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Cambiar\n contraseÃ±a"
            android:textSize="17dp"
            android:fontFamily="@font/verminvibesv"
            android:background="#4EBBBF"/>

    </LinearLayout>

</RelativeLayout>