<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOpciones"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas Opciones"
        android:textColor="@color/white"
        android:textSize="43dp"
        android:textAlignment="center"
        android:layout_marginTop="35sp"
        android:fontFamily="@font/menu_fonts"/>

    <!-- Parte de Top Global-->
    <!-- Parte de Mi Perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">



            <!-- Animacion del Perfil del jugador -->
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="115dp"
                android:layout_height="115dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="profile_animation.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Boton Mi Perfil -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="70sp"
                android:layout_marginTop="20dp"
                android:text="Mi Perfil"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Parte de Mi Perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Boton Mi Perfil -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="70sp"
                android:layout_marginTop="20dp"
                android:text="Mi Perfil"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Animacion del Perfil del jugador -->
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="115dp"
                android:layout_height="115dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="profile_animation.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Parte Acerca de -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Imagen sobre informacion -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/view_dos"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Boton Acerca de -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="70sp"
                android:layout_marginTop="20dp"
                android:text="Acerca de"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Parte Cerrar Sesion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Boton Cerrar Sesion -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="70sp"
                android:layout_marginTop="20dp"
                android:text="Mi Perfil"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Animacion Sobre cerrar sesion -->
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="115dp"
                android:layout_height="115dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="log_out.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>