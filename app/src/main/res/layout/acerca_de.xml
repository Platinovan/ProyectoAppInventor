<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="15dp"
    android:background="#7b35a6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desarrollado Por"
        android:textColor="@color/white"
        android:fontFamily="@font/verminvibesv"
        android:textSize="16dp"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/programmable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Jose Luis"
        android:textSize="22dp"
        android:fontFamily="@font/audiowide"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/QuitarAcercaDe"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:text="Ok"
        android:textSize="20dp"
        android:fontFamily="@font/menu_fonts"
        android:background="#26bf78"/>

</RelativeLayout>